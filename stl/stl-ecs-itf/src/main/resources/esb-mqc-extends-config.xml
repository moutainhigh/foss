<?xml version="1.0" encoding="UTF-8"?>
<esbConfig>
    <componentParams>
    	<!--  系统编码，根据实际情况修改 -->
        <systemCode>FOSS</systemCode>
        <!--  核心线程数，可根据实际情况配置 -->
        <corePoolSize>6</corePoolSize>
        <!--  最大线程数，可根据实际情况配置 -->
        <maxPoolSize>10</maxPoolSize>
        <!--  缓存线程队列size，可根据服务器资源情况配置-->
        <bufferQueueSize>10000</bufferQueueSize>
        <!--  状态队列，不可修改 -->
        <statusQueue>RQ_ESB_STATUS</statusQueue>
    </componentParams>
    <channels>
		<channel>
            <!--客户端请求发送队列 -->
            <requestComOut>RQ_FOSS_REQUEST_COM_OUT</requestComOut>
            <!--客户端请求响应队列 -->
            <responseComIn>QU_FOSS_RESPONSE_COM_IN</responseComIn>
            <!--服务端请求接收队列  QU_FOSS_REQUEST_COM_IN-->
            <requestComIn>QU_FOSS_REQUEST_STL_ECS_ITF_COM_IN</requestComIn>
            <!--服务端响应发送队列 -->
            <responseComOut>RQ_FOSS_RESPONSE_COM_OUT</responseComOut>
        </channel>
    </channels>
    <services>
    	 <service>
            <serviceCode>FOSS_ESB2FOSS_ECS_SYNC_SIGNRESULT</serviceCode>
            <!--  S=服务端，C=客户端 -->
            <clientOrServer>S</clientOrServer>
            <!--  交互方式（单向：3，请求响应：2），客户端服务端配置须一致 -->
            <exchangePattern>2</exchangePattern>
            <!--  消息格式（XML/JSON） -->
            <messageFormat>JSON</messageFormat>
            <!--  请求转换类 -->
            <requestConvertorClass>com.deppon.esb.pojo.transformer.json.SyncOutfieldSignForRequestTrans</requestConvertorClass>
            <!--  响应转换类 -->
            <responseConvertorClass>com.deppon.esb.pojo.transformer.json.SyncOutfieldSignForResponseTrans</responseConvertorClass>
        </service>
    </services>
</esbConfig>
