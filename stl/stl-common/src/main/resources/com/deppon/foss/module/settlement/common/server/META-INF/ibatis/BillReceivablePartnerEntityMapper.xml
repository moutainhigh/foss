	<!-- 根据运单单号与应收类型查询唯一的应收单信息 -->
    <select id="selectByWayBillNoAndBillType" resultMap="PartnerResultMap"
            parameterType="java.util.Map">
        SELECT /*结算-应收单-根据来源单号查询应收单信息*/
        <include refid="Partner_Column_List" />
        FROM STL.T_STL_BILL_RECEIVABLE
        WHERE WAYBILL_NO = #{wayBillNo}
        AND BILL_TYPE = #{billType}
        AND ACTIVE = #{active}
    </select>
    
    
    <!-- 按输入参数查询应收单总条数、总金额 --> 
 	<resultMap id="ReceivableBillResultMap" type="com.deppon.foss.module.settlement.common.api.shared.dto.StlBillDetailDto" >
    	<result column="TOTALNUM" property="flowTotalNum" jdbcType="DECIMAL" />
    	<result column="TOTALAMOUNT" property="flowTotalAmount" jdbcType="DECIMAL" />
    	<result column="BILLTYPE" property="flowType" jdbcType="VARCHAR" />
  	</resultMap>
    <!-- ptp监控查询应收单各单据总笔数和总金额数 -->
    <select id="countReceivableBills" resultMap="ReceivableBillResultMap" parameterType="com.deppon.foss.module.settlement.common.api.shared.dto.BillingQueryRequestDto">
		select /*ptp监控--根据参数查询应收单各单据类型总记录数和总金额*/
		count(1) totalNum,NVL(sum(r.amount)/100,0) totalAmount,r.bill_type billType
        from stl.t_stl_bill_receivable r
		where r.active='Y' and r.bill_type in ('POR','PFCR','PDFR','PP','PTF','PER','POFR') and
		<![CDATA[ r.CREATE_TIME >= #{startTime} AND r.CREATE_TIME < #{endTime} ]]>
		group by r.bill_type 
		 union
		select count(1) totalNum,NVL(sum(r.amount)/100,0) totalAmount,r.bill_type billType
		      from stl.t_stl_bill_receivable r
		where r.active='Y' and r.bill_type in ('CR','DR') and
		<![CDATA[ r.CREATE_TIME >= #{startTime} AND r.CREATE_TIME < #{endTime} ]]>
		and exists (select code from bse.t_bas_sales_department d where d.code = r.dest_org_code and 
		d.is_league_saledept='Y')
		group by r.bill_type 
    </select>
