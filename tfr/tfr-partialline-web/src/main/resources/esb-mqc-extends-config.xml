<?xml version="1.0" encoding="UTF-8"?>
<esbConfig>
    <!-- 组件参数 -->
    <componentParams>
        <!--  系统编码，根据实际情况修改 -->
        <systemCode>FOSS</systemCode>
        <!--  核心线程数，可根据实际情况配置 -->
        <corePoolSize>15</corePoolSize>
        <!--  最大线程数，可根据实际情况配置 -->
        <maxPoolSize>30</maxPoolSize>
        <!--  缓存线程队列size，可根据服务器资源情况配置-->
        <bufferQueueSize>10000</bufferQueueSize>
        <!--  状态队列，不可修改 -->
        <statusQueue>RQ_ESB_STATUS</statusQueue>
    </componentParams>
    <!-- MQ通道 -->
    <channels>
         <channel>
            <!--客户端请求发送队列 -->
            <requestComOut>RQ_FOSS_REQUEST_COM_OUT</requestComOut>
            <!--客户端请求响应队列 -->
            <responseComIn>QU_FOSS_RESPONSE_COM_IN</responseComIn>
            <!--服务端请求接收队列  -->
            <requestComIn>QU_FOSS_REQUEST_COM_IN</requestComIn>
            <!--服务端响应发送队列 -->
            <responseComOut>RQ_FOSS_RESPONSE_COM_OUT</responseComOut>
        </channel>
    </channels>
    <!-- 服务配置 -->
    <services>
       <!-- 散客信息创建同步接口 -->
        <service>
            <!--  服务调用方编码，从配置管理组获取 -->
            <serviceCode>ESB_FOSS2ESB_FOSS_CUBC_ADDPARTIALLINE</serviceCode>
            <!--  S=服务端，C=客户端 -->
            <clientOrServer>C</clientOrServer>
            <!--  交互方式（单向：3，请求响应：2），客户端服务端配置须一致 -->
            <exchangePattern>2</exchangePattern>
            <!--  消息格式（XML/JSON） -->
            <messageFormat>JSON</messageFormat>
            <!--  请求转换类 -->
            <requestConvertorClass>com.deppon.esb.pojo.transformer.json.RequestExternalBillDtoTrans</requestConvertorClass>
            <!--  响应转换类 -->
            <responseConvertorClass>com.deppon.esb.pojo.transformer.json.ResponseExternalBillDtoTrans</responseConvertorClass>
        </service>
       <!-- 航空正单信息创建同步接口 -->
        <service>
            <!--  服务调用方编码，从配置管理组获取 -->
            <serviceCode>ESB_FOSS2ESB_FOSS_CUBC_ADDAIRWAYBILL</serviceCode>
            <!--  S=服务端，C=客户端 -->
            <clientOrServer>C</clientOrServer>
            <!--  交互方式（单向：3，请求响应：2），客户端服务端配置须一致 -->
            <exchangePattern>2</exchangePattern>
            <!--  消息格式（XML/JSON） -->
            <messageFormat>JSON</messageFormat>
            <!--  请求转换类 -->
            <requestConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirWaybillRequestTrans</requestConvertorClass>
            <!--  响应转换类 -->
            <responseConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirWaybillResponseTrans</responseConvertorClass>
        </service>
       <!-- 合大票信息创建同步接口 -->
        <service>
            <!--  服务调用方编码，从配置管理组获取 -->
            <serviceCode>ESB_FOSS2ESB_FOSS_CUBC_ADDAIRPICKBILL</serviceCode>
            <!--  S=服务端，C=客户端 -->
            <clientOrServer>C</clientOrServer>
            <!--  交互方式（单向：3，请求响应：2），客户端服务端配置须一致 -->
            <exchangePattern>2</exchangePattern>
            <!--  消息格式（XML/JSON） -->
            <messageFormat>JSON</messageFormat>
            <!--  请求转换类 -->
            <requestConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirRevisebillRequestTrans</requestConvertorClass>
            <!--  响应转换类 -->
            <responseConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirRevisebillResponseTrans</responseConvertorClass>
        </service>
       <!-- 中转提货清单创建同步接口 -->
        <service>
            <!--  服务调用方编码，从配置管理组获取 -->
            <serviceCode>ESB_FOSS2ESB_FOSS_CUBC_ADDAIRPICKUP</serviceCode>
            <!--  S=服务端，C=客户端 -->
            <clientOrServer>C</clientOrServer>
            <!--  交互方式（单向：3，请求响应：2），客户端服务端配置须一致 -->
            <exchangePattern>2</exchangePattern>
            <!--  消息格式（XML/JSON） -->
            <messageFormat>JSON</messageFormat>
            <!--  请求转换类 -->
            <requestConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirTransferWaybillRequestTrans</requestConvertorClass>
            <!--  响应转换类 -->
            <responseConvertorClass>com.deppon.esb.pojo.transformer.json.AddAirTransferWaybillResponseTrans</responseConvertorClass>
        </service>
    </services>
</esbConfig>